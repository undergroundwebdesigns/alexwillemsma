    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title {{ page.title }}
    %meta{:content => "width=device-width", :name => "viewport"}/
    / build:css({app,.tmp}) /css/main.css
    / Syntax highlighting CSS
    %link{:href => "/css/syntax.css", :rel => "stylesheet"}/
