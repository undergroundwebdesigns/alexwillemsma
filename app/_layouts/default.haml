      .footer
        .contact
          %p
            Alex Willemsma
            %br/
            %a{:href => "mailto:alex@alexwillemsma.com"} alex@alexwillemsma.com
        .contact
          %p
            %a{:href => "https://github.com/yourusername"} github.com/yourusername
            %br/
            %a{:href => "https://twitter.com/yourusername"} twitter.com/yourusername
